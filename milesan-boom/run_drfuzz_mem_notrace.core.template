name: "::run_drfuzz_mem_notrace:0.1"
description: "Run on drfuzz with memory module and tracing disabled"

filesets:
  files_cells:
    depend: []
    files:
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/src/ift_sram_mem.sv
      - src/top_tiny_soc_drfuzz_mem.sv
      - generated/out/drfuzz_mem.sv
    file_type: systemVerilogSource

  files_dv:
    files:
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/elf.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/elfloader.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/taintloader.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/common_functions.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/ticks.h : {is_include_file: true}
      - dv/shared_mem/def_tb.h : {is_include_file: true}
      - dv/shared_mem/update_req.cc
      - dv/drfuzz_mem/def_inst.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/dtypes.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/update_req.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/helperfuncs.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/macros.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/testbench.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/queue.h : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/queue.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/helperfuncs.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/testbench.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/toplevel.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/dtypes.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/corpus.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/corpus.h  : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/mutator.cc
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/mutator.h  : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/afl.h  : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/riscv/instructions.h  : {is_include_file: true}
      - $MILESAN_DESIGN_PROCESSING_ROOT/common/dv/drfuzz_mem/riscv/isa_masks.h  : {is_include_file: true}

    file_type: cppSource

targets:
  default:
    default_tool: verilator
    filesets:
      - files_cells
      - files_dv
    toplevel: top_tiny_soc
    tools:
      verilator:
        mode: cc
        verilator_options:
          - '-CFLAGS "-std=c++14 -Wall -DIS_VANILLA -DTOPLEVEL_NAME=ibex_tiny_soc -O0"'
          - '-LDFLAGS "-pthread -lutil -ljsoncpp"'
          - '-DSYNTHESIS=1'
          - "-Wall"
          - "-Wno-PINCONNECTEMPTY"
          - "-Wno-fatal"
          - "-Wno-EOFNEWLINE"
          - "-Wno-DECLFILENAME"
          - "-Wno-PINMISSING"
          - "-Wno-UNUSEDPARAM"
          - "-Wno-WIDTH"
          - "-Wno-UNUSEDSIGNAL"
          - "-Wno-CASEOVERLAP"
          - "-Wno-CASEINCOMPLETE"
          - "-Wno-BLKSEQ"
          - "-Wno-UNDRIVEN"
          - "-Wno-TIMESCALEMOD"
          - "-Wno-PINNOTFOUND"
          - "-Wno-UNOPTFLAT"
          - "-Wno-IMPLICIT"
          - "-Wno-CMPCONST"
          - "-Wno-SYNCASYNCNET"

